  "license": "MIT",
  "scripts": {
    "start": "babel-node src/index.js",
    "predev": "cd src && prisma generate",
    "dev": "NODE_ENV=development nodemon --delay 5 src/index.js --watch src --exec babel-node",
    "lint": "eslint src",
    "lint-autofix": "eslint src --fix",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "dotenv-safe": "^6.1.0",
    "graphql": "^14.0.2",
    "graphql-shield": "^4.1.0",
    "graphql-yoga": "^1.16.7",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "prisma-client-lib": "^1.20.7"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-template-literals": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/types": "^7.1.6",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-named-imports": "^2.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prisma": "^1.21.1"
  }
}
